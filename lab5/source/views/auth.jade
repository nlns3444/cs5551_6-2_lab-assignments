extends base
block content
    title= title
    link(rel='stylesheet', href='./stylesheets/vendor/vegas/vegas.min.css')
    link(rel='stylesheet', href='./stylesheets/auth.css')
    div.container
        div.row
            div.col-lg-12.text-center
                .login-body.center
                    article.container-login.center-block
                        section
                            ul#top-bar.nav.nav-tabs.nav-justified
                                li.active
                                    a(href='#login-access') Login
                                    li
                                        a(href='./register') Register
                                div(style="margin-top: 10%;")
                                .tab-content.tabs-login.col-lg-12.col-md-12.col-sm-12.cols-xs-12
                                    #login-access.tab-pane.fade.active.in
                                        h2
                                            i.glyphicon.glyphicon-log-in
                                            |  Chat Room - Login
                                        form.form-horizontal.form-signin(method='post', accept-charset='utf-8', autocomplete='off', role='form', name='form-signin')
                                            input(type="hidden", name="_csrf", value=csrfToken)
                                            if error
                                                .alert.alert-danger.alert-dismissible(role='alert')
                                                    button.close(type='button', data-dismiss='alert', aria-label='Close')
                                                        span(aria-hidden='true') x
                                                    strong Error! #{error}
                                            .form-group
                                                span(id="reauth-email", class="reauth-email", style="margin-top: 10px;margin-bottom: -10px;")
                                            .form-group
                                                label.sr-only(for='login') Email
                                                input#email.form-control(type='email', name='email', placeholder='Email', tabindex='1', value="", required)
                                            .form-group
                                                label.sr-only(for='password') Password
                                                input#password.form-control(type='password', name='password', placeholder='Password', value="", tabindex='2', required)
                                            .checkbox
                                                label.control-label(for='remember_me')
                                                    div.remember_me
                                                        input#remember_me(type='checkbox', name='remember_me', value='1', tabindex='3')
                                                        | Remember-me
                                            br
                                            .form-group
                                                button#submit.btn.btn-lg.btn-danger(type='submit', name='log-me-in', tabindex='5') Sign in



    script(type='text/javascript' src='http://zeptojs.com/zepto.min.js')
    script(type='text/javascript' src='./javascripts/vendor/vegas/vegas.min.js')
    script(type='text/javascript' src='./javascripts/vendor/vegas.js')
    script(type='text/javascript' src='./javascripts/auth/auth.js')
    script(type='text/javascript').
        $(document).ready(function() {
            // Init Background plugin vegas
            var _vegas = new background();
            _vegas.init();

            // Init the js of page auth
            var _auth = new auth();
            _auth.init();
            _auth.loadProfile();
        });